{
    "compilerOptions": {
      "target": "es2017",
      "lib": ["es2017"],
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "strict": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "removeComments": true,
      "rootDir": "./src",
      "outDir": "./build",
      "skipLibCheck": true
    },
    "exclude": [
      "node_modules",
      "./node_modules",
      "./node_modules/*",
      "./node_modules/@types/node/index.d.ts"
    ],
    "compileOnSave": false
}